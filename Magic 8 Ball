/* The Magic 8-Ball is a super popular toy used for fortune-telling or seeking advice, developed in the 1950s!

Write a magic8.cpp program that will output a random fortune each time it executes.
*/
#include <iostream>
#include <cstdlib>
int main() {
  std::cout << "Magic ball.\n";
  srand(time(NULL));
  int answer = std::rand() % 10;
  std::cout << answer;
  if (answer==0) {

    std::cout << "It is certain.\n";
  }
  
  else if (answer==1) {
  std::cout <<" Most likely..\n";
    }
  else if (answer==2) {
  std::cout <<" Ask again later.\n";
    }
  else if (answer==3) {
  std::cout <<" Better not tell you now.\n";
    }
  else if (answer==4) {
  std::cout <<" My sources say no.\n";
    }
  else if (answer==5) {
  std::cout <<" Don't count on it.\n";
    }
  else if (answer==6) {
  std::cout <<" Outlook not so good.\n";
    }
  else if (answer==7) {
  std::cout <<" Reply hazy, try again.\n";
    }
  else if (answer==8) {
  std::cout <<" Yes.\n";
    }
  else if (answer==9) {
  std::cout <<" No.\n";
    }    
  else{
    std::cout <<" Very doubtful.\n";
  }  
}
